        // friend_name  = random_friend_name(random_index);
        // friend_photo = random_friend_photo(random_index);


        //map mood to foursquare api section
        if(mood == "adventurous")
          foursquare_mood = "outdoors";
        else if(mood == "food")
          foursquare_mood = "food";
        else if(mood == "toppicks" )
